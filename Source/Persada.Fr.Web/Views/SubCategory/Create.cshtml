@model Persada.Fr.Model.GEMA_TM_SUB_CATEGORY
@{
    ViewBag.Title = "Create SubCategory";
}

<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("ActionCreate", "SubCategory", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        <label class="col-md-2 control-label">Category</label>
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.CATEGORY_ID, (IEnumerable<SelectListItem>)ViewBag.GetCategoryList, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">SubCategory</label>
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.SUB_CATEGORY_NAME, new { @class = "form-control"})
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">Description</label>
        <div class="col-md-10">
            @Html.TextAreaFor(m => m.DESCRIPTION, new { @class = "form-control", @rows = "5" })
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">Image</label>
        <div class="col-md-10">
            <div>
                <img id="txtImage" src="data:image/png;base64," class="img-medium" style="display:none" />
                <input type="file" id="postedFile" name="postedFile" style="display:none" />
            </div>
            <div style="float:left">
                <a href="#" id="btnBrowse" onclick="GetFile()" class="btn btn-sm btn-white btn-default btn-round">Browse</a>
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Create" />
        </div>
    </div>
}

