@model IEnumerable<Persada.Fr.Model.GEMA_TM_CATEGORY>
@using Persada.Fr.Model;

@{
    ViewBag.Title = "Gemagrafi Studio";
    ViewBag.IndexHome = "active";
}

@if (ViewBag.msgSuccess != null)
{
    <div class="row">
        <div class="modal fade" id="myModalHome" role="dialog">
            <div class='modal-dialog'>
                <div class='modal-content'>
                    <div class='modal-header'>
                        <button type='button' class='close' data-dismiss='modal'>&times;</button>
                        <h4 class='modal-title'>Success</h4>
                    </div><div class='modal-body'>
                        <div class='row'><p>@ViewBag.msgSuccess<p></div>
                    </div><div class='modal-footer'></div>
                </div>
            </div>
        </div>
    </div>

    <script>
        $(function () {
            $('#myModalHome').modal();
        })
    </script>
}

@if (ViewBag.msgError != null)
{
    <div class="row">
        <div class="modal fade" id="myModalHome" role="dialog">
            <div class='modal-dialog'>
                <div class='modal-content'>
                    <div class='modal-header'>
                        <button type='button' class='close' data-dismiss='modal'>&times;</button>
                        <h4 class='modal-title'>Error</h4>
                    </div><div class='modal-body'>
                        <div class='row'><p>@ViewBag.msgError<p></div>
                    </div><div class='modal-footer'></div>
                </div>
            </div>
        </div>
    </div>

    <script>
        $(function () {
            $('#myModalHome').modal();
        })
    </script>
}

@if (ViewBag.ErrorPageModal != null)
{
    <div class="row">
        <div class="modal fade" id="myModalHome" role="dialog">
            <div class='modal-dialog'>
                <div class='modal-content'>
                    <div class='modal-header'>
                        <button type='button' class='close' data-dismiss='modal'>&times;</button>
                        <h4 class='modal-title'>Error</h4>
                    </div><div class='modal-body'>
                        <div class='row'><p>@ViewBag.ErrorPageModal<p></div>
                    </div><div class='modal-footer'></div>
                </div>
            </div>
        </div>
    </div>    

    <script>
        $(function () {
            $('#myModalHome').modal();
        })
    </script>
}

<div class="row">
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            @{
                int i = 0;
                foreach (GEMA_TM_SLIDESHOW item in ViewBag.GetSlideshow)
                {
                    <li data-target="#myCarousel" data-slide-to="@i" class="@item.CLASS"></li>
                    i += 1;
                }
            }
        </ol>

        <div class="carousel-inner">
            @{
                foreach (GEMA_TM_SLIDESHOW item in ViewBag.GetSlideshow)
                {
                    <div class="item @item.CLASS">
                        <div style="background:url('@item.PHOTO_PATH'); background-size:cover;" class="slider-size">
                            <div class="carousel-caption">
                                <a href="@item.URL" style="text-decoration:none"><h2 class="tourism-shadow">@item.TITTLE</h2></a>
                                <p>@item.CONTENT_DESCRIPTION</p>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</div>


